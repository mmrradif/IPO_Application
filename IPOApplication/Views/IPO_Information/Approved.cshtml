@model List<IPOApplication.Models.IPO_Application>

<h2>Approved Applications:</h2>

@if (Model.Count == 0)
{
    <p>There are no approved applications.</p>
}
else
{
 

    <table class="table">
        <thead>
            <tr>
                <th>User ID</th>
                <th>Instrument</th>
                <th>Application Amount</th>
                <th>Approval Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var application in Model)
            {
                <tr>
                    <td>@application.UserId</td>
                    <td>@application.Instrument.InstrumentName</td>
                    <td>@application.ApplicationAmount</td>
                    <td>@application.CreateDate.ToShortDateString()</td>

                    <td>
                        <form method="post" asp-action="Executed" asp-controller="IPO_Information">
                            <input type="hidden" name="id" value="@application.Id" />
                            <button type="submit" class="btn btn-primary">Execute</button>
                        </form>
                    </td>


                </tr>
            }
        </tbody>
    </table>
}
