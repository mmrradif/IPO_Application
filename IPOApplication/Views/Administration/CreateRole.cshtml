
@model CreateRoleViewModel
@{
    ViewData["Title"] = "CreateRole";
}




<div style="background-color: rgba(252, 254, 253, 0.5); min-height:100vh;">

    <h2 class="text-center mb-3 p-4 alert-info rounded shadow">Create Role</h2>

    <div class="row m-5">
        <div class="col-8 m-auto p-5 rounded shadow">

            <form method="post">
                <div class="text-danger text-center p-1 rounded" asp-validation-summary="All">
                </div>

                <div class="form-group mb-4">
                    @*<h4>Role Name</h4>*@
                    <input type="text" asp-for=" RoleName" class="form-control shadow" placeholder="Please write a new Role Name" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>


                @if ((await authorizationService.AuthorizeAsync(User, "AdminCreatePolicy")).Succeeded)
                {
                    <div class="col text-center">
                        <button type="submit" class="btn btn-primary shadow-lg px-5 col-6">Create</button>
                    </div>
                }

                <div class="col text-center">
                    <button type="submit" class="btn btn-primary shadow-lg px-5 col-6">Create</button>
                </div>


            </form>
        </div>
    </div>

</div>